{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "regions": ["sfo1"],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://glide-v3-backend.vercel.app/api"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://glide-v3-backend.vercel.app/api/:path*"
    },
    {
      "source": "/auth/:path*",
      "destination": "https://glide-v3-backend.vercel.app/auth/:path*"
    }
  ]
}
