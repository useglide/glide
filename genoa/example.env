# Canvas LMS settings
CANVAS_BASE_URL=https://canvas.instructure.com
CANVAS_API_KEY=your_canvas_api_key_here

# Gemini LLM settings
# You can use either GOOGLE_API_KEY or GEMINI_API_KEY
# If both are provided, GEMINI_API_KEY takes precedence
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Express.js backend settings
# Use the production URL for deployment
EXPRESS_BACKEND_URL=https://glide-jet.vercel.app/api
# Use localhost for local development
# EXPRESS_BACKEND_URL=http://localhost:3001/api

# Firebase settings (for authentication with Express.js backend)
# These are required for the FastAPI backend to work with Firebase authentication
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
